{
  "name": "messages-api",
  "version": "0.1.0",
  "license": "ISC",
  "private": "true",
  "type": "module",
  "prisma": {
    "schema": "src/prisma/schema"
  },
  "scripts": {
    "start": "dotenvx run -f .env.local -- tsx src/server.ts",
    "dev": "dotenvx run -f .env.local -- tsx --watch src/server.ts",
    "migrate-db": "dotenvx run -f .env.local -- prisma migrate dev",
    "deploy-db": "dotenvx run -f .env.local -- prisma migrate deploy",
    "seed-db": "dotenvx run -f .env.local -- tsx src/scripts/seedDb.ts",
    "reset-db": "dotenvx run -f .env.local -- prisma migrate reset",
    "test": "dotenvx run -f .env.test -- jest -i",
    "test:migrate-db": "dotenvx run -f .env.test -- prisma migrate dev",
    "test:reset-db": "dotenvx run -f .env.test -- prisma migrate reset",
    "type-check": "tsc --noEmit",
    "lint": "eslint . --fix",
    "format": "prettier src --write"
  },
  "dependencies": {
    "@prisma/client": "^5.19.1",
    "bcryptjs": "^2.4.3",
    "connect-redis": "^7.1.1",
    "cors": "^2.8.5",
    "express": "^4.19.2",
    "express-async-handler": "^1.2.0",
    "express-session": "^1.18.0",
    "express-validator": "^7.2.0",
    "redis": "^4.7.0",
    "socket.io": "^4.8.0"
  },
  "devDependencies": {
    "@dotenvx/dotenvx": "^1.13.2",
    "@eslint/js": "^9.9.1",
    "@jest/globals": "^29.7.0",
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/express-session": "^1.18.0",
    "@types/node": "^22.5.2",
    "@types/supertest": "^6.0.2",
    "eslint": "^9.9.1",
    "eslint-config-prettier": "^9.1.0",
    "globals": "^15.9.0",
    "jest": "^29.7.0",
    "prettier": "^3.3.3",
    "prettier-plugin-prisma": "^5.0.0",
    "prisma": "^5.19.1",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "tsx": "^4.19.0",
    "typescript": "^5.5.4",
    "typescript-eslint": "^8.4.0"
  }
}
